{
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2016",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
